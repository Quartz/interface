{
	"name": "@quartz/interface",
	"version": "1.0.0",
	"description": "",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build:storybook": "build-storybook -o .storybook/build -s public",
		"build:types": "tsc --emitDeclarationOnly",
		"copy": "./copy.sh",
		"prebuild": "rm -rf dist",
		"prepublishOnly": "npm run build",
		"new": "npm run copy Example $1",
		"start": "start-storybook -p 8600 -s public",
		"test": "npm run test:lint && npm run test:unit",
		"test:eslint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --ignore-pattern *.d.ts .",
		"test:lint": "npm-run-all --parallel --continue-on-error --aggregate-output test:eslint test:stylelint test:types",
		"test:stylelint": "stylelint --ignore-path .gitignore '**/*.scss'",
		"test:types": "tsc --noEmit",
		"test:unit": "jest"
	},
	"author": "Quartz",
	"license": "ISC",
	"files": [
		"dist/**/*",
		"src/**/*"
	],
	"main": "src/components/index",
	"dependencies": {
		"@quartz/js-utils": "^1.1.0",
		"@quartz/styles": "github:Quartz/styles#aa7b8c0"
	},
	"devDependencies": {
		"@quartz/eslint-config-react": "^1.1.3",
		"@quartz/stylelint-config": "^1.2.0",
		"@storybook/addon-a11y": "^6.0.10",
		"@storybook/addon-essentials": "^6.0.10",
		"@storybook/addon-links": "^6.0.10",
		"@storybook/react": "^6.0.10",
		"@types/jest": "^26.0.15",
		"classnames": "^2.2.6",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.1.0",
		"npm-run-all": "^4.1.5",
		"prop-types": "^15.7.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"sass": "^1.27.0",
		"storybook-addon-themes": "^5.4.1",
		"stylelint": "^13.6.1",
		"typescript": "^4.0.3"
	}
}
